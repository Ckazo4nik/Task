%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :username, 'Username'
    %br/
    = f.text_field :username, autofocus: true
  .field
    = f.label :full_name, 'Повне ім/`я'
    %br/
    = f.text_field :full_name, autofocus: true
  .field
    = f.label :email, "Ваш емейл"
    %br/
    = f.email_field :email, autofocus: true
  .field
    = f.label :birthday, "День народження"
    %br/
    = f.date_select(:birthday, start_year: 1940, end_year: Date.today.year)
  .field
    = f.label :country, "Країна"
    %br/
    = f.text_field :country, autofocus: true
  .field
    = f.label :state, "Штат"
    %br/
    = f.text_field :state, autofocus: true
  .field
    = f.label :city, "Місто"
    %br/
    = f.text_field :city, autofocus: true
  .field
    = f.label :address, "Адреса"
    %br/
    = f.text_field :address, autofocus: true
  .field
    = f.label :password, "Ваш пароль"
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, "Підтвердіть пароль"
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Зареєструватись"
= render "devise/shared/links"
